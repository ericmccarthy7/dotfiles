autogenerated = 0

$terminal = wezterm
$fileManager = thunar
$menu = fuzzel

env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24

general {
    gaps_in = 0
    gaps_out = 0

    border_size = 0
    allow_tearing = false
    layout = dwindle

    resize_on_border = false

}

decoration {
    rounding = 0
    active_opacity = 1.0
    inactive_opacity = 1.0
    shadow {
        enabled = false
    }
    blur {
        enabled = false
    }
}

animations {
    enabled = yes, please :)

    # Default animations, see https://wiki.hypr.land/Configuring/Animations/ for more

    bezier = easeOutQuint,0.23,1,0.32,1
    bezier = easeInOutCubic,0.65,0.05,0.36,1
    bezier = linear,0,0,1,1
    bezier = almostLinear,0.5,0.5,0.75,1.0
    bezier = quick,0.15,0,0.1,1

    animation = global, 1, 10, default
    animation = border, 1, 5.39, easeOutQuint
    animation = windows, 1, 4.79, easeOutQuint
    animation = windowsIn, 1, 4.1, easeOutQuint, popin 87%
    animation = windowsOut, 1, 1.49, linear, popin 87%
    animation = fadeIn, 1, 1.73, almostLinear
    animation = fadeOut, 1, 1.46, almostLinear
    animation = fade, 1, 3.03, quick
    animation = layers, 1, 3.81, easeOutQuint
    animation = layersIn, 1, 4, easeOutQuint, fade
    animation = layersOut, 1, 1.5, linear, fade
    animation = fadeLayersIn, 1, 1.79, almostLinear
    animation = fadeLayersOut, 1, 1.39, almostLinear
    animation = workspaces, 1, 1.94, almostLinear, fade
    animation = workspacesIn, 1, 1.21, almostLinear, fade
    animation = workspacesOut, 1, 1.94, almostLinear, fade
}

dwindle {
    pseudotile = true # Master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = true # You probably want this
}

master {
    new_status = master
}

misc {
    force_default_wallpaper = 1 # Set to 0 or 1 to disable the anime mascot wallpapers
    disable_hyprland_logo = true # If true disables the random hyprland logo / anime girl background. :(
}

input {
    kb_layout = us
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =

    follow_mouse = 1
    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
    accel_profile = "flat"

    repeat_delay = 200
    repeat_rate = 30

    touchpad {
        natural_scroll = false
    }
}

gestures {
    workspace_swipe = false
}

$mod = "SUPER"
$mainMod = "SUPER"
bind = $mainMod, Q, killactive,
bind = CONTROL $mainMod, Q, exec, hyprlock
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, Space, exec, $menu
bind = ALT SHIFT, 1, workspace, 1
bind = ALT SHIFT, 2, workspace, 2
bind = ALT SHIFT, 3, workspace, 3
bind = ALT SHIFT, 4, workspace, 4
bind = ALT SHIFT, 5, workspace, 5
bind = ALT SHIFT, 6, workspace, 6
bind = CONTROLALT SHIFT, 1, movetoworkspace, 1
bind = CONTROLALT SHIFT, 2, movetoworkspace, 2
bind = CONTROLALT SHIFT, 3, movetoworkspace, 3
bind = CONTROLALT SHIFT, 4, movetoworkspace, 4
bind = CONTROLALT SHIFT, 5, movetoworkspace, 5
bind = CONTROLALT SHIFT, 6, movetoworkspace, 6
bind = CONTROLALT SHIFT, L, movetoworkspace, e+1
bind = ALT SHIFT, F, centerwindow
bind = CONTROLALT SHIFT, F, togglefloating
bind = ALT SHIFT, N, workspace, e+1
bind = ALT SHIFT, J, cyclenext, prev
bind = CONTROLALT SHIFT, J, swapnext, prev
bind = ALT SHIFT, K, cyclenext
bind = CONTROLALT SHIFT, K, swapnext
bind = ALT SHIFT, Space, togglesplit,
bindle = , XF86AudioRaiseVolume, exec, wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+ && ~/scripts/wp_get_volume.sh
bindle = , XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && ~/scripts/wp_get_volume.sh
bindl = , XF86AudioMute, exec, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous
bindl = , XF86AudioNext, exec, playerctl next

{{- if and (ne .chezmoi.hostname "mediabox") (eq .chezmoi.os "linux" ) }}
monitor = DP-1,3840x2160@60.00Hz,1920x0,2
monitor = DP-2,1920x1080@239.76Hz,0x0,1
workspace=1,monitor:DP-1
workspace=2,monitor:DP-1
bind = CONTROLALT SHIFT, e, movecurrentworkspacetomonitor, DP-1
bind = CONTROLALT SHIFT, w, movecurrentworkspacetomonitor, DP-2
bind = ALT SHIFT, E, focusmonitor, DP-1
bind = ALT SHIFT, W, focusmonitor, DP-2
exec-once = waybar
exec-once = ~/scripts/startup.sh
exec-once=dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
{{- end }}

windowrule = suppressevent maximize, class:.*
windowrule = nofocus,class:^$,title:^$,xwayland:1,floating:1,fullscreen:0,pinned:0
