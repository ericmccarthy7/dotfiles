(defwindow          clock
                    :monitor 0
                    :geometry (geometry :x "20px"
                                        :y "20px"
                                        :width "1px"
                                        :height "1px"
                                        :anchor "top right")
                                        :exclusive false
                                        :stacking "overlay"
                                        :focusable false
                                        (box                :class "container"
                                                            :orientation "v"
                                                            (box :class "date" date)
                                                            (box :class "time" time)
                                        ))

(defpoll date       :interval "10s"
                    :initial "initial-value"
                    :run-while time-visible
                    `date '+%A, %B %e, %Y'`)
(defpoll time       :interval "1s"
                    :initial "initial-value"
                    :run-while time-visible
                    `date '+%H:%M:%S'`)
