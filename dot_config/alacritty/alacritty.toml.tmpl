import = ["~/.config/alacritty/rose-pine.toml"]

[font]
size = 16

[font.bold]
family = "Noto Sans Mono"
style = "SemiCondensed Medium"

[font.italic]
family = "Noto Sans Mono"
style = "SemiCondensed Light"

[font.normal]
family = "Noto Sans Mono"
style = "SemiCondensed Light"

{{if eq .chezmoi.os "darwin" }}
[shell]
program = "{{- .brew_home }}/bin/fish"
{{- end}}

[window]
decorations = "none"
startup_mode = "Maximized"
