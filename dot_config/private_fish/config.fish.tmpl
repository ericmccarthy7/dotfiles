{{- if eq .work true }}
function setproxy
    export {all,http,https,ftp}_proxy="http://oproxy.fg.rbc.com:8080"
    export {ALL,HTTP,HTTPS,FTP}_PROXY="http://oproxy.fg.rbc.com:8080"
    export NO_PROXY="127.0.0.*,172.*,192.168.*,*.fg.rbc.com,*.devfg.rbc.com,*.saifg.rbc.com,localhost"
    export no_proxy="$NO_PROXY"
end

function unsetproxy
    set -e {all,http,https,ftp}_proxy
    set -e {ALL,HTTP,HTTPS,FTP}_PROXY
end

setproxy
{{- end }}

